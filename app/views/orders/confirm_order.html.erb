<div class="row">
  <div class="col-lg-12">
    <div class="ibox">
      <div class="col-lg-2">
      </div>
      <div class="col-lg-8">
        <div class="ibox-title">
          <center><h4><b>Success</b> - your order is confirmed!</h4>
            <b>Order number:</b> #<%= @order.id %><br />
            <%= currency_rate_with_symbol(@country_rate, @order.grand_total) %>
          </center>
        </div>
        <div class="ibox-content">
          <div class="row">
            <div class="col-lg-4">
              <div class="panel panel-default">
                <div class="panel-body">
                  <%= shipping_address(@order) %>
                </div>
              </div>
            </div>
            <div class="col-lg-8">
              <table class="table">
                <tbody>
                  <tr>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Price</th>
                  </tr>
                  <% @order.order_items.each do |order_item| %>
                    <tr>
                      <td><%= product_image(Image.get_product_page_image(order_item.product), 'thumb') %></td>
                      <td><%= order_item.quantity %></td>
                      <td><%= currency_rate_with_symbol(@country_rate, order_item.rate) %></td>
                    </tr>
                  <% end %>
                  <tr>
                    <td></td>
                    <td><%= t('cart.discount') %></td>
                    <td><%= currency_rate_with_symbol(@country_rate, @order.discount) %></td>
                  </tr>
                  <tr>
                    <td></td>
                    <td><%= t('cart.cashback') %></td>
                    <td><%= currency_rate_with_symbol(@country_rate, @order.cashback) %></td>
                  </tr>
                  <tr>
                    <td></td>
                    <td><%= t('cart.brownie_point') %></td>
                    <td><%= @order.brownie_point %></td>
                  </tr>
                  <tr>
                    <td></td>
                    <td><%= t('cart.total') %></td>
                    <td><%= currency_rate_with_symbol(@country_rate, @order.total) %></td>
                  </tr>
                  <tr>
                    <td></td>
                    <td><%= t('cart.shipping') %></td>
                    <td><%= currency_rate_with_symbol(@country_rate, @order.shipping) %></td>
                  </tr>
                  <tr>
                    <td></td>
                    <td><strong><%= t('cart.grand_total') %></strong></td>
                    <td><strong><%= currency_rate_with_symbol(@country_rate, @order.grand_total) %></strong></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-2">
      </div>
    </div>
  </div>
</div>

