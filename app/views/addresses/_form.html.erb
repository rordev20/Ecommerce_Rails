<%= form_for @address, :html => {:class => "form-horizontal"} do |f| %>
  <% if @address.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@address.errors.count, "error") %> prohibited this address from being saved:</h2>

      <ul>
      <% @address.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="ibox-title">
  <h5><%= t('address.title') %></h5>
  <div class="ibox-tools">
    <a class="collapse-link">
      <i class="fa fa-chevron-up"></i>
    </a>
    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
      <i class="fa fa-wrench"></i>
    </a>
    <ul class="dropdown-menu dropdown-user">
      <li><a href="#">Config option 1</a>
      </li>
      <li><a href="#">Config option 2</a>
      </li>
    </ul>
    <a class="close-link">
      <i class="fa fa-times"></i>
    </a>
  </div>
</div>
<div class="ibox-content">
  <div class="form-group"><label class="col-sm-2 control-label"><%= t('address.country') %></label>
    <div class="col-sm-10">
      <%= f.select(:country, @countries.collect {|s| [s.name, s.id]}, {:prompt => 'Select'}, {class: "form-control"})  %>
     </div>
  </div>
  <div class="hr-line-dashed"></div>
  <div class="form-group"><label class="col-sm-2 control-label"><%= t('address.full_name') %></label>
    <div class="col-sm-10">
      <%= f.text_field :full_name, class: 'form-control'%>
    </div>
  </div>
  <div class="hr-line-dashed"></div>
  <div class="form-group"><label class="col-sm-2 control-label"><%= t('address.pin_code') %></label>
    <div class="col-sm-10">
      <%= f.text_field :zipcode, class: 'form-control'%>
    </div>
  </div>
  <div class="hr-line-dashed"></div>
  <div class="form-group"><label class="col-sm-2 control-label"><%= t('address.address1') %></label>
    <div class="col-sm-10">
      <%= f.text_field :address1, class: 'form-control'%>
    </div>
  </div>
  <div class="hr-line-dashed"></div>
  <div class="form-group"><label class="col-sm-2 control-label"><%= t('address.address2') %></label>
    <div class="col-sm-10">
      <%= f.text_field :address2, class: 'form-control'%>
    </div>
  </div>
  <div class="hr-line-dashed"></div>
  <div class="form-group"><label class="col-sm-2 control-label"><%= t('address.city') %></label>
    <div class="col-sm-10">
      <%= f.text_field :city, class: 'form-control'%>
    </div>
  </div>
  <div class="hr-line-dashed"></div>
  <div class="form-group"><label class="col-sm-2 control-label"><%= t('address.state') %></label>
    <div class="col-sm-10">
      <%= f.select(:state, @states.collect {|s| [s.name, s.id]}, {:prompt => 'Select'}, {class: "form-control"})  %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-4 col-sm-offset-2">
      <%= f.submit "Submit", class: "btn btn-primary pull-right" %>
    </div>
  </div>
</div>
<% end %>