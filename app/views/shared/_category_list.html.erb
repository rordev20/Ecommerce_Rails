<div class="row border-bottom white-bg">
  <nav class="navbar navbar-static-top navbar-bottom" role="navigation">
    <div class="navbar-header">
      <button aria-controls="navbar" aria-expanded="false" data-target="#navbar" data-toggle="collapse" class="navbar-toggle collapsed" type="button">
        <i class="fa fa-reorder"></i>
      </button>            
    </div>
    <div class="navbar-collapse collapse" id="navbar">
      <ul class="nav navbar-nav">
        <% @categories.each do |category| %>
          <li class="dropdown">
            <a aria-expanded="false" role="button" href="<%='google.com'%>" class="dropdown-toggle" data-toggle="dropdown"><%= category.name %><span class="caret"></span></a>
            <ul role="menu" class="dropdown-menu">
              <% category.sub_categories.each do |sub_category| %>
                <li><%= link_to sub_category.name, products_path(sub_category: sub_category) %></li>
              <% end %>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
</div>