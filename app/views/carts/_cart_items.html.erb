<% if @cart_items.size == 0 %>
  <p class="text-center">
    There are no items in your shopping cart.  Please <%= link_to "go back", root_path %> and add some items to your cart.
  </p>
<% else %>
  <% @cart_items.each do |cart_item| %>
    <div class="ibox-content">
      <div class="table-responsive">
        <table class="table shoping-cart-table">
          <tbody>
            <tr>
              <td width="90">
                <div class="cart-product-imitation">
                  <%= product_image(Image.get_product_page_image(cart_item.product), 'thumb') %>
                </div>
              </td>
              <td class="desc">
                <h3>
                  <a href="#" class="text-navy">
                    <%= link_to cart_item.product.name, cart_item.product %>
                  </a>
                </h3>
                <p class="small">
                  <%= cart_item.product.description %>
                </p>
                <dl class="small m-b-none">
                  <dt>Description lists</dt>
                  <dd>A description list is perfect for defining terms.</dd>
                </dl>
                <div class="m-t-sm">
                  <a href="#" class="text-muted"><i class="fa fa-gift"></i> Add to wish list</a>
                  |
                  <%= link_to "Remove item", cart_item, { data: { confirm: "Are you sure you wish to delete the product '#{cart_item.product.name}' from your cart?" }, method: :delete, remote: true, class: "text-muted" } %>
                  <!--<a href="#" class="text-muted"><i class="fa fa-trash"></i> Remove item</a>-->
                </div>
              </td>
              <td>
                <%= currency_rate_with_symbol(@country_rate, cart_item.product.sell_price) %>
                <s class="small text-muted"><%= currency_rate_with_symbol(@country_rate, cart_item.product.sell_price) %></s>
              </td>
              <td>
                <input type="text" value="<%= cart_item.quantity %>" name="item_count" data-item-id="<%=cart_item.product_id%>" data-cart-item-id="<%= cart_item.id %>" data-item-qty="<%= cart_item.quantity %>" class="<%= append_class_with_id('item_qty_', cart_item.id) %>">
              </td>
              <td>
                <h4>
                  <span class="<%= append_class_with_id('item_total_', cart_item.id) %>">
                    <%= currency_rate_with_symbol(@country_rate, cart_item.cart_item_total) %>
                  <span>
                </h4>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
<% end %>


<script>
  $(document).ready(function(){
    $("input[name='item_count']").TouchSpin({
      min: 1
    });
    $( ".input-group.bootstrap-touchspin" ).addClass( "touch-spin-custom-width" );
  });
</script>